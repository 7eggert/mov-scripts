#!/bin/sh
pmv  \
'/ of/ && return;'\
's/^Serien - (\d+ of \d+)\s+([^-.]+)( -|\.)/$2 - $1$3/ && return;'\
'my $done=0;'\
'{ $done = 1 if s/^(.*) - (?:(.*?) )?\((\d+)__(\d+)\)/'\
'	$n=length($4);'\
'	sprintf("%s - %$n.${n}d of %d%s",$1,$3,$4,($2 eq "" ? "" : " $2"));/e;'\
'   s/(.*) - (.*?) - (\d+ of \d+)/$1 - $3 $2/; };'\
's/^(\d+ of \d+) (.*?) - /$2 - $1 /;'\
'return if $done;'\
'{ $done = 1 if s/^([^-]*) \((\d+)__(\d+)\)/'\
'	$n=length($3);'\
'	sprintf("%s - %$n.${n}d of %d",$1,$2,$3);/e; };'\
's/^(\d+ of \d+) (.*?) - /$2 - $1 /;'\
'return if $done;'\
'' "$@"

